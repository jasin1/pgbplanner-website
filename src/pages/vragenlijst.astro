---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="content-wrapper">
    <h1 class="font-color-primary">Deel jouw ervaring met PGB-beheer</h1>
    <iframe
      data-tally-src="https://tally.so/embed/mYl5Ez?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
      loading="lazy"
      width="100%"
      height="3481"
      frameborder="0"
      marginheight="0"
      marginwidth="0"
      title="Deel jouw PGB ervaring (5-10 min)"></iframe>
    <script>
      var d = document,
        w = "https://tally.so/widgets/embed.js",
        v = function () {
          "undefined" != typeof Tally
            ? Tally.loadEmbeds()
            : d
                .querySelectorAll("iframe[data-tally-src]:not([src])")
                .forEach(function (e) {
                  e.src = e.dataset.tallySrc;
                });
        };
      if ("undefined" != typeof Tally) v();
      else if (d.querySelector('script[src="' + w + '"]') == null) {
        var s = d.createElement("script");
        (s.src = w), (s.onload = v), (s.onerror = v), d.body.appendChild(s);
      }
    </script>
  </div>

  <style>

    .content-wrapper{
      margin: 3rem 0;
      padding: 0 1rem;
    }

  </style>
</BaseLayout>
